<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/math_nav_graph"
    app:startDestination="@id/mathFragment">

    <fragment
        android:id="@+id/mathFragment"
        android:name="com.niran.psychoquiz.ui.MathFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_math" >
        <action
            android:id="@+id/action_mathFragment_to_multiplicationFragment"
            app:destination="@id/multiplicationFragment" />
    </fragment>
    <fragment
        android:id="@+id/multiplicationFragment"
        android:name="com.niran.psychoquiz.ui.MultiplicationFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_multiplication" >
        <action
            android:id="@+id/action_multiplicationFragment_to_multiplicationSettingsFragment"
            app:destination="@id/multiplicationSettingsFragment" />
        <argument
            android:name="outputOneArray"
            app:argType="integer[]" />
        <argument
            android:name="outputTwoArray"
            app:argType="integer[]" />
    </fragment>
    <fragment
        android:id="@+id/multiplicationSettingsFragment"
        android:name="com.niran.psychoquiz.ui.MultiplicationSettingsFragment"
        android:label="@string/settings"
        tools:layout="@layout/fragment_multiplication_settings">
        <action
            android:id="@+id/action_multiplicationSettingsFragment_to_multiplicationFragment"
            app:destination="@id/multiplicationFragment"
            app:popUpTo="@id/multiplicationFragment"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>