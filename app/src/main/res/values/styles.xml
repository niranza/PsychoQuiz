<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="QuizButtonStyle" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="android:textSize">17sp</item>
        <item name="backgroundTint">?attr/answerButtonsDefaultColor</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">70sp</item>
    </style>

    <style name="NextAndPreviousButtonStyle" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="backgroundTint">?attr/defaultBgColor</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">17sp</item>
    </style>

    <!-- Divider style -->
    <style name="DividerStyle" parent="">
        <item name="android:background">?attr/dividerHorizontal</item>
    </style>

</resources>